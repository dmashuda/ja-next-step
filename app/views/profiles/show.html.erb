<div class="ja-profile">
  <div class="ja-profile-close">X</div>
  <img class="ja-profile-banner" src="<%= @profile.banner.url %>">
  <img class="ja-profile-logo" src="<%= @profile.logo.url %>">
  <table class="ja-profile-body">
    <tr>
      <td class="ja-profile-body-left">
          <div class="ja-profile-gray ja-profile-body-left-addr"><%= @profile.street %></div>
          <div class="ja-profile-gray ja-profile-body-left-addr"><%= @profile.city %>, <%= @profile.state %> <%= @profile.zip %></div>
          <div class="ja-profile-gray ja-profile-body-left-phone"><%= @profile.phone %></div>
          <div class="ja-profile-gray ja-profile-body-left-website"><%= @profile.website_url %></div>
          <i class="fa fa-2x fa-instagram"></i>
          <i class="fa fa-2x fa-facebook"></i>
          <i class="fa fa-2x fa-twitter"></i>
        </td>
        <td class="ja-profile-body-right">
          <div class="ja-profile-title">About Us</div>
          <div class="ja-profile-body-right-about-us ja-profile-gray"><%= @profile.about_us %></div>
          <div class="ja-profile-body-right-contact-us">
            <a href="#">Contact Us</a>
          </div>
        </td>
    </tr>
  </table>
  <div class="row ja-profile-separator">
    <hr class="col-md-5"/>
    <div class="col-md-2 ja-profile-title">Company Posts</div>
    <hr class="col-md-5"/>
  </div>
  <div class="ja-profile-posts">
    <a href="#">
      <i class="fa fa-chevron-left"></i>
    </a>
    <% @posts.each do |post| %>
        <div class="ja-post ja-post-min">
          <a class="ja-post-close" href="#">X</a>
          <div class="ja-post-header">
            <div class="ja-post-header-crop">
              <a href="#"><%= post.stakeholder.name %></a>
            </div>
            <img class="ja-post-logo-img" src="<%= post.stakeholder.profile.logo.url %>">
          </div>
          <div class="ja-post-img-section">
            <img class="ja-post-img" src="<%= post.photo.url %>">
            <div class="ja-post-img-gradient">
              <a href="#"><i class="ja-post-icon ja-post-info fa fa-info-circle"></i></a>
              <a target="contact" href="mailto:<%= post.contact_email %>?body=<%= post.email_body %>&subject=<%= post.email_subject %>"><i class="ja-post-icon ja-post-contact fa fa-envelope"></i></a>
            </div>
          </div>
          <div class="ja-post-body">
            <div class="ja-post-subject"><a href="#"><%= post.subject %></a></div>
            <div class="ja-post-abstract">
              <a href="#"><%= post.abstract %></a>
            </div>
            <div class="ja-post-summary" style="display: none"><%= post.body %></div>
          </div>
        </div>
    <% end %>
    <a href="#">
      <i class="fa fa-chevron-right"></i>
    </a>

  </div>
</div>