    <div class="field">
      <%= f.label :subject %><br>
      <%= f.text_field :subject %>
    </div>
    <div class="field">
      <%= f.label :start_date %>
      <input type="checkbox"><br>
      <%= f.datetime_select :start_date %>
    </div>
    <div class="field">
      <%= f.label :end_date %>
      <input type="checkbox"><br>
      <%= f.datetime_select :end_date %>
    </div>
    <div class="field">
      <%= f.label :abstract %><br>
      <%= f.text_area :abstract %>
    </div>
    <div class="field">
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </div>
    <div class="field">
      <%= f.label :contact_email %><br>
      <%= f.text_field :contact_email %>
    </div>
    <div class="field">
      <%= f.label :email_subject %><br>
      <%= f.text_field :email_subject %>
    </div>
    <div class="field">
      <%= f.label :email_body %><br>
      <%= f.text_area :email_body %>
    </div>
    <div class="field">
      <%= f.label :active %><br>
      <%= f.check_box :active %>
    </div>
    <div class="field">
      <%= f.file_field :photo %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
