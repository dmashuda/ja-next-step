<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Abstract</th>
      <th>Body</th>
      <th>Contact email</th>
      <th>Email subject</th>
      <th>Email body</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.subject %></td>
        <td><%= post.start_date %></td>
        <td><%= post.end_date %></td>
        <td><%= post.abstract %></td>
        <td><%= post.body %></td>
        <td><%= post.contact_email %></td>
        <td><%= post.email_subject %></td>
        <td><%= post.email_body %></td>
        <td><%= post.active %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
